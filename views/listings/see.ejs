<% layout("layout/boilerplate") %>

  <body>
    <div id="listing-details">
      <div class="listing-card">
        <% if (listing.image && listing.image.url) { %>
          <img src="<%= listing.image.url %>" alt="<%= listing.title %>" class="details-img" />
          <% } %>

            <div class="details-body">
              <h2 class="details-title">
                <%= listing.title %>
              </h2>
              <p class="details-location">
                <%= listing.location %>, <%= listing.country %>
              </p>
              <p class="details-desc">
                <%= listing.description %>
              </p>
              <p class="details-price">NPR <%= listing.price.toLocaleString("en-NP") %> / night</p>

              <div class="details-actions">
                <a href="/listings/<%= listing._id %>/edit" class="btn-edit">Edit</a>
                <form action="/listings/<%= listing._id %>?_method=DELETE" method="POST" class="delete-form">
                  <button type="submit" class="btn-delete">Delete</button>
                </form>
              </div>
            </div>
      </div>
    </div>
    <div class="details-actions">
      <p> Leave a review here</p> <br>
      <form method="post" action="/listings/<%= listing._id %>/reviews">
        <div>
          <label for="rating">Rating
            <input type="range" min="1" max="5" id="rating" name="review[rating]">
          </label>
        </div>
        <div>
          <label for="comment">Commnets</label>
          <textarea name="review[comment]" id="comment" cols="5" rows="5"></textarea>
        </div>
        <button>Submit</button>
      </form>
    </div>
  </body>