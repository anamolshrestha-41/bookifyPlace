<% layout("./layout/boilerplate") %> 

<h1 class="page-title">Discover Amazing Places</h1>

<div class="listings-grid">
  <% for(let list of allListings ) { %>
    <div class="listing-card">
      <img src="<%= list.image.url %>" class="listing-img" alt="<%= list.title %>">
      <div class="listing-body">
        <h5 class="listing-title"><%= list.title %></h5>
        <p class="listing-desc"><%= list.description %></p>
        <div class="listing-price">â‚¹<%= list.price.toLocaleString("en-IN") %> per night</div>
        <div class="listing-location"><%= list.location %>, <%= list.country %></div>
        <a href="/listings/<%= list._id %>" class="btn-view">View Details</a>
      </div>
    </div>
  <% } %>
</div>
