<% layout("layout/boilerplate") %>

<div class="listing-form">
  <h3 class="form-title">Share Your Place</h3>
  
  <form action="/listings" method="POST" enctype="multipart/form-data">
    <div class="form-group">
      <label for="title">Title</label>
      <input id="title" type="text" name="title" placeholder="Give your place a name" class="form-input" required>
    </div>

    <div class="form-group">
      <label for="description">Description</label>
      <textarea id="description" name="description" placeholder="Tell us about your place..." class="form-textarea" required></textarea>
    </div>

    <!-- <div class="form-group">
      <label for="image">Photo URL</label>
      <input id="image" type="url" name="image" placeholder="Add a photo URL" class="form-input">
    </div> -->

    <div class="form-group">
      <label for="image">Upload Listing Image</label>
      <input id="image" type="file" name="image" class="form-input">
    </div>

    <div class="form-group">
      <label for="price">Price per night (â‚¹)</label>
      <input id="price" type="number" name="price" placeholder="0" class="form-input" required>
    </div>

    <div class="form-group">
      <label for="location">Location</label>
      <input id="location" type="text" name="location" placeholder="City, State" class="form-input" required>
    </div>

    <div class="form-group">
      <label for="country">Country</label>
      <input id="country" type="text" name="country" placeholder="Country" class="form-input" required>
    </div>

    <button type="submit" class="btn-submit">Share</button>
  </form>
</div>
